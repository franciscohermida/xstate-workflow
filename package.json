{
  "name": "@boxofapps/poc/xstate-workflow",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "db:migration:create": "wrangler d1 migrations create boa-studio",
    "db:migration:script": "prisma migrate diff --from-local-d1 --to-schema-datamodel ./server/db/schema --script --output ",
    "db:migration:apply": "wrangler d1 migrations apply boa-studio",
    "db:generate": "prisma generate --schema ./server/db/schema",
    "secrets:update": "wrangler secret bulk .dev.vars.production",
    "deploy-only": "wrangler deploy",
    "deploy": "run-s build-only deploy-only"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "es-toolkit": "^1.39.7",
    "partysocket": "^1.1.4",
    "vue": "^3.5.17",
    "xstate": "^5.20.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.7.4",
    "@cloudflare/workers-types": "^4.20250620.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "eslint-plugin-vue": "^10.2.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.0",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^3.0.2",
    "wrangler": "^4.25.0"
  }
}
